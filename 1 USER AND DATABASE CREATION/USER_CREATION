-- USER SQL
CREATE USER “SOFTWARE_COMPANY_DB” IDENTIFIED BY “28346”
DEFAULT TABLESPACE “USERS”
TEMPORARY TABLESPACE “TEMP”;
-- ROLES
GRANT “DBA” TO “SOFTWARE_COMPANY_DB”;
GRANT “CONNECT” TO “SOFTWARE_COMPANY_DB”;
GRANT “RESOURCE” TO “SOFTWARE_COMPANY_DB”;
-- SYSTEM PRIVILEGES
GRANT CREATE TRIGGER TO “SOFTWARE_COMPANY_DB”;
GRANT CREATE TABLE TO “SOFTWARE_COMPANY_DB”;
GRANT CREATE SEQUENCE TO “SOFTWARE_COMPANY_DB”;
GRANT ALTER ANY SEQUENCE TO “SOFTWARE_COMPANY_DB”;
GRANT ALTER ANY TABLE TO “SOFTWARE_COMPANY_DB”;
